@page
@model EmployeesApp.Pages.CreateModel
@{
    ViewData["Title"] = "Add Employee";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Employee</title>
</head>
<body>

    <h4>Employees</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Employees.Name" class="control-label"></label>
                    <input asp-for="Employees.Name" class="form-control" />
                    <span asp-validation-for="Employees.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Employees.EmployeeNumber" class="control-label"></label>
                    <input asp-for="Employees.EmployeeNumber" class="form-control" />
                    <span asp-validation-for="Employees.EmployeeNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Employees.DateOfBirth" class="control-label"></label>
                    <input asp-for="Employees.DateOfBirth" class="form-control" />
                    <span asp-validation-for="Employees.DateOfBirth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Employees.DepartmentId" class="control-label"></label>
                    <select asp-for="Employees.DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId">
                        <option>Please select a department</option>
                    </select>
                    <span asp-validation-for="Employees.DepartmentId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>

</body>
</html>
