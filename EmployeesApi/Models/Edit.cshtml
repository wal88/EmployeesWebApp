@page
@model EmployeesApi.Models.EditModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Employees</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Employees.EmployeeNumber" />
            <div class="form-group">
                <label asp-for="Employees.Name" class="control-label"></label>
                <input asp-for="Employees.Name" class="form-control" />
                <span asp-validation-for="Employees.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employees.DateOfBirth" class="control-label"></label>
                <input asp-for="Employees.DateOfBirth" class="form-control" />
                <span asp-validation-for="Employees.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employees.DepartmentId" class="control-label"></label>
                <select asp-for="Employees.DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                <span asp-validation-for="Employees.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

</body>
</html>
